<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity_counselling"

    tools:showIn="@layout/app_bar_activity_counselling">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="10sp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_cdlno"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_dl_no"
                        android:layout_weight="1"
                        />
                    <info.hoang8f.widget.FButton
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check"
                        android:textColor="@android:color/black"
                        app:buttonColor="#196f3d"
                        app:shadowColor="#196f3d"/>
                </LinearLayout>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_caadhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Aadhar No"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cepassport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E Passport No"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cdlvalidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DL validity"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cplant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plant Name"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cdestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Destination"
                    android:layout_weight="1"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IVMS Fitted"/>

                    <Spinner
                        android:id="@+id/sp_gps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cnumbertrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Number of Trip"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_coverspeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Over speed Count (OS)"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_charshbreak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Harsh Braking (HB)"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_caccelation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Harsh Acceleration (HA)"
                    android:layout_weight="1"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cdriving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter ContiunousDriving (CD)"
                    android:layout_weight="1"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safety Rating"/>

                    <Spinner
                        android:id="@+id/sp_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DMC Topic Shared "/>

                    <com.thomashaertel.widget.MultiSpinner
                        android:id="@+id/sp_sharetopics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />




            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>