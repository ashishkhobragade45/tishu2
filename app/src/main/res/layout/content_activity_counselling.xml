<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity_counselling"

    tools:showIn="@layout/app_bar_activity_counselling">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="10dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_cdlno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="@string/enter_dl_no"
                        android:layout_weight="1"
                        app:met_floatingLabel="highlight"
                        />
                    <Button
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/btn_checkdlno"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check"
                        android:theme="@style/MyButton"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_drivermmmyyyy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:hint="e.g.(May2018)"
                        android:padding="5dp"/>
                    <Button
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/btn_checkhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:theme="@style/MyButton"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        />

                </LinearLayout>

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_caadhar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Aadhar No"
                    android:maxLength="15"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:editable="false"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Driver Name"
                    android:maxLength="40"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:editable="false"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cepassport"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="E Passport No"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="15"
                    android:editable="false"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cdlvalidity"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="DL validity"
                    android:inputType="date"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:editable="false"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cplant"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Plant Name"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:editable="false"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_ctransporter"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Transporter"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:editable="false"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content">


                    <RadioGroup
                        android:id="@+id/rg_cstatus"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        >
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Status : "
                            android:layout_weight="1"
                            android:textStyle="bold"/>
                        <RadioButton
                            android:id="@+id/rb_green"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Green"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:id="@+id/rb_yellow"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Yellow"/>
                        <RadioButton
                            android:id="@+id/rb_red"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Red"
                            android:layout_weight="1"/>
                        <RadioButton
                            android:id="@+id/rb_nonIVMS"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="NON-IVMS Fitted"/>


                    </RadioGroup>
                </LinearLayout>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_corigin"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Origin"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="30"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cdestination"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Destination"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="30"
                    />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_vehical"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:hint="Enter Vehicle Number"
                        android:layout_weight="1"
                        app:met_floatingLabel="highlight"
                        android:maxLength="11"
                        />
                    <Button
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/btn_cvehicalcheck"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/check"
                        android:theme="@style/MyButton"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        />


                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <com.rengwuxian.materialedittext.MaterialEditText
                        android:id="@+id/edt_cmmmyyyy"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:hint="e.g.(May2018)"
                        android:layout_weight="1"
                        android:padding="5dp"/>
                    <Button
                        android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/btn_cvehicalhistory"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="History"
                        android:theme="@style/MyButton"
                        style="@style/Widget.AppCompat.Button.Borderless"
                        />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="IVMS Fitted"/>

                    <Spinner
                        android:id="@+id/sp_gps"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>


                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cnumbertrip"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Number of Trip"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="5"
                    android:inputType="number"
                    />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_coverspeed"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Over speed Count (OS)"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="5"
                    android:inputType="number"
                    />

                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_charshbreak"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:hint="Enter Harsh Braking (HB)"
                    android:inputType="number"
                    android:maxLength="5"
                    app:met_floatingLabel="highlight" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_caccelation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Harsh Acceleration (HA)"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="5"
                    android:inputType="number"/>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_cdriving"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter ContiunousDriving (CD)"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="5"
                    android:inputType="number"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Safety Rating"/>

                    <Spinner
                        android:id="@+id/sp_rating"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="10sp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="DMC Topic Shared "/>

                    <com.thomashaertel.widget.MultiSpinner
                        android:id="@+id/sp_sharetopics"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                </LinearLayout>
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:layout_marginTop="5dp"
                    android:id="@+id/edt_sharetopics"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter extra shared topics"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="50"
                    />
                <Space
                    android:layout_width="match_parent"
                    android:layout_height="12dp" />
                <com.rengwuxian.materialedittext.MaterialEditText
                    android:id="@+id/edt_ctrainername"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Enter Trainer Name"
                    android:layout_weight="1"
                    app:met_floatingLabel="highlight"
                    android:maxLength="40"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <Button
                        android:id="@+id/btn_csubmit"
                        android:padding="05dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Submit"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:theme="@style/MyButton"/>

                    <Space
                        android:layout_width="10dp"
                        android:layout_height="match_parent" />

                    <Button
                        android:id="@+id/btn_ccancel"
                        android:padding="05dp"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Cancel"
                        style="@style/Widget.AppCompat.Button.Borderless.Colored"
                        android:theme="@style/MyButton"/>
                </LinearLayout>



            </LinearLayout>



        </ScrollView>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>